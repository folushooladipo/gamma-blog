<h1>Edit article</h1>
<% if @article %>
  <form action="" class="edit-article-form">
    <div class="title-input-container">
      <label for="article-title">Title</label>
      <input type="text" name="article-title" value="<%= @article.title %>" />
    </div>
    <div class="description-input-container">
      <label for="article-description">Description</label>
      <textarea name="article-description" class="description-input" cols="30" rows="10"><%= @article.description %></textarea>
    </div>
    <button type="submit" disabled class="submit-btn">Edit</button>
  </form>
<% else %>
  <p>Article not found.</p>
<% end %>

<a href="/articles" class="back-to-articles-btn">Back to articles</a>
