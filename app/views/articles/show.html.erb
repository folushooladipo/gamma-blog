<% if @article %>
  <div class="article-details-container">
    <a href="/articles/<%= @article.id %>/edit">Edit article</a>
    <h2><%= @article.title %></h2>
    <p><%= @article.description %></p>
  </div>
<% else %>
  <h2>Oops! Article not found.</h2>
<% end %>

<a href="/articles" class="back-to-articles-btn">Back to articles</a>
